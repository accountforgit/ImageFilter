<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:background="@drawable/image_radius"
    android:id="@+id/f_i_v_layout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:id="@+id/f_i_v_image"
        android:onClick="toFilter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:elevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:textSize="@dimen/dim17"
            android:id="@+id/f_i_v_text"
            android:textColor="#a63d3d" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_weight="5"
            android:src="@drawable/dots_vertical"
            android:onClick="onImageDelete"
            android:id="@+id/f_i_v_button_delete"/>
    </LinearLayout>
</LinearLayout>